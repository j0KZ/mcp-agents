  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j0Kz/mcp-agents.git",
    "directory": "packages/auto-pilot"
  },
  "homepage": "https://github.com/j0Kz/mcp-agents/tree/main/packages/auto-pilot",
  "bugs": {
    "url": "https://github.com/j0Kz/mcp-agents/issues"
  },
